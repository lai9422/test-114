<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="UTF-8">
    <title>管理後台 | 人員列表</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        .sidebar { min-height: 100vh; background-color: #2c3e50; color: white; }
        .nav-link { color: rgba(255,255,255,0.8); }
        .nav-link:hover, .nav-link.active { color: white; background-color: rgba(255,255,255,0.1); border-radius: 5px; }
        .avatar { width: 40px; height: 40px; border-radius: 50%; object-fit: cover; background: #ddd;}
        .status-badge { font-size: 0.8em; }
    </style>
</head>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
    /**
     * 主函式：處理新增員工的表單送出
     * 通常綁定在 "儲存" 按鈕的 onclick 事件或表單的 onsubmit 事件
     */
    async function submitNewEmployee() {
        // --- 1. 取得表單資料 (DOM 操作) ---
        // 透過 id 抓取 HTML 元素中的輸入值
        const id = document.getElementById('empId').value; // 取得隱藏的 ID
        const name = document.getElementById('empName').value;
        //const email = document.getElementById('empEmail').value;
        const position = document.getElementById('empPosition').value;
        const department = document.getElementById('empDept').value;
        const status = document.getElementById('empStatus').value;

        // --- 前端簡單驗證 ---
        // 檢查必要欄位是否有值，若無則彈出警告並中斷函式
        if(!name || !position) {
            alert("請填寫所有必填欄位");
            return; // 停止執行後續程式碼
        }
        // 將資料包裝成 newEmployeeData 物件
        const newEmployeeData = { id,name, position, department, status };

        // 判斷是新增 (POST) 還是修改 (PUT)
        const method = id ? 'PUT' : 'POST';

        try {
            // 2. 發送 API 給後端 (假設後端路由是 /api/employees)
            // 使用 await 等待 fetch 完成，避免程式繼續往下跑
            // 假設後端接收 POST 請求的路由是 '/api/employees'
            const response = await fetch('/api/employees', {
                method: method, // 指定 HTTP 方法為 POST (新增)
                headers: {
                    'Content-Type': 'application/json' // 告訴後端我們傳的是 JSON 格式
                },
                body: JSON.stringify(newEmployeeData) // 將 JS 物件轉成 JSON 字串
            });
            // 若回應是ok，檢查 HTTP 狀態碼是否為 200-299 (成功)
            if (response.ok) {
                alert(id ? '修改成功！' : '新增成功！');
                window.location.reload(); // [建議可選] 直接重新整理頁面以更新資料
                //const result = await response.json(); // 等待後端回傳的結果 (通常會包含新建立的 ID 或完整資料)
                
                // --- 3. 成功後的 UI 處理 ---
                
                // 取得 Bootstrap Modal 的 DOM 元素 (取得在新增員工的視窗寫入的資料)
                // modalE1是一個html元素，透過bootstrap.Modal.getInstance(modalEl)取得該元素的Modal以及控制
                const modalEl = document.getElementById('addEmployeeModal');
                const modal = bootstrap.Modal.getInstance(modalEl);
                modal.hide(); //這裡因為我們已經對bootstrap的控制，所以可以直接呼叫hide方法來關閉modal視窗
                document.getElementById('addEmployeeForm').reset(); // 重置表單

                // 4. 動態新增一列到表格 (這樣不用重新整理頁面)
                addCreateRowToTable(newEmployeeData); 
                
                alert('新增成功！');
            } else {
                alert('新增失敗，請稍後再試');
            }
        } catch (error) {
            console.error('Error:', error);
            alert('系統錯誤');
        }
    }

    // 2. [新增] 開始編輯函式
    function startEdit(id, name, email, position, department, status) {
        // 填入資料到 Modal
        document.getElementById('empId').value = id;
        document.getElementById('empName').value = name;
        document.getElementById('empEmail').value = email;
        document.getElementById('empPosition').value = position;
        document.getElementById('empDept').value = department;
        document.getElementById('empStatus').value = status;
        
        // 修改 Modal標題 (選用)
        document.querySelector('.modal-title').innerText = '修改員工資料';

        // 開啟 Modal
        const modalEl = document.getElementById('addEmployeeModal');
        const modal = new bootstrap.Modal(modalEl);
        modal.show();
    }

    // 3. [新增] 刪除員工函式
    async function deleteEmployee(id) {
        if (!confirm('確定要刪除這位員工嗎？')) return;

        try {
            const response = await fetch('/api/employees', {
                method: 'DELETE',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ id: id })
            });

            if (response.ok) {
                alert('刪除成功');
                window.location.reload(); // 重新整理頁面
            } else {
                alert('刪除失敗');
            }
        } catch (error) {
            console.error(error);
            alert('系統錯誤');
        }
    }

    // 4. [新增] 重置表單 (當 Modal 關閉時或點擊新增時使用)
    function resetForm() {
        document.getElementById('addEmployeeForm').reset();
        document.getElementById('empId').value = ''; // 清空 ID
        document.querySelector('.modal-title').innerText = '新增員工資料';
    }






    // 輔助函式：將新資料插入表格第一列
    function addCreateRowToTable(data) {
        const tbody = document.querySelector('tbody'); // 選取表格的 tbody 元素
        
        // --- 處理空資料狀態 ---
        // 如果目前表格顯示 "目前沒有員工資料"，先移除該行
        if (tbody.children[0] && tbody.children[0].innerText.includes('目前沒有員工資料')) {
            tbody.innerHTML = '';
        }

        const newRow = document.createElement('tr'); // 建立一個新的 tr (表格列) 元素
        
        // --- 邏輯判斷：在職狀態標籤顏色 ---
        // 使用三元運算子判斷：如果在職狀態是 'Active' 給綠色(success)，否則給灰色(secondary)
        const statusBadge = data.status === 'Active' 
            ? '<span class="badge bg-success status-badge">在職</span>' 
            : '<span class="badge bg-secondary status-badge">離職</span>';

        // --- 邏輯判斷：頭像文字 ---
        // 抓取名字的第一個字元當作頭像 (例如 "John" -> "J")
        const avatarChar = data.name.charAt(0);

        newRow.innerHTML = `  
           <td>
                <div class="d-flex align-items-center">
                    <div class="avatar d-flex justify-content-center align-items-center me-3 text-dark">
                        ${avatarChar}
                    </div>
                    <div>
                        <div class="fw-bold">${data.name}</div>
                        <div class="text-muted small">${data.email}</div>
                    </div>
                </div>
            </td>
            <td>${data.position}</td>
            <td>${data.department}</td>
            <td>${statusBadge}</td>
            <td>
                <button class="btn btn-sm btn-outline-primary me-1"><i class="bi bi-pencil"></i></button>
                <button class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i></button>
            </td>
        `; //「請把等號右邊這串文字，當作 HTML 程式碼，直接塞進 newRow 這個 <tr> 裡面，並且要讓瀏覽器把標籤（如 <td>, <div>）渲染出來，而不只是顯示純文字。」
            

        // 將新的一行插入到表格最上方
        tbody.insertBefore(newRow, tbody.firstChild);
    }
</script>
<body>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-2 sidebar p-3">
            <h4 class="text-center mb-4 mt-2">EMS 系統</h4>
            <hr>
            <ul class="nav flex-column">
                <li class="nav-item mb-2">
                    <a href="#" class="nav-link active"><i class="bi bi-people-fill me-2"></i> 人員管理</a>
                </li>
                <li class="nav-item mb-2">
                    <a href="#" class="nav-link"><i class="bi bi-bar-chart-fill me-2"></i> 績效報表</a>
                </li>
                <li class="nav-item mb-2">
                    <a href="#" class="nav-link"><i class="bi bi-gear-fill me-2"></i> 系統設定</a>
                </li>
            </ul>
            <div class="mt-auto pt-5">
                <a href="/login" class="btn btn-outline-light w-100 btn-sm">登出</a>
            </div>
        </div>

        <div class="col-md-10 p-4 bg-light">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>人員列表</h2>
                <div class="d-flex align-items-center">
                    <span class="me-2">歡迎回來, <strong><%= adminName %></strong></span>
                    <button class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#addEmployeeModal">
                        <i class="bi bi-plus-lg"></i> 新增員工
                    </button>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-body">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>姓名</th>
                                <th>職位</th>
                                <th>部門</th>
                                <th>狀態</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (employees.length > 0) { %>
                                <% employees.forEach(function(emp) { %>
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="avatar d-flex justify-content-center align-items-center me-3 text-dark">
                                                    <%= emp.name.charAt(0) %>
                                                </div>
                                                <div>
                                                    <div class="fw-bold"><%= emp.name %></div>
                                                    <div class="text-muted small"><%= emp.email %></div>
                                                </div>
                                            </div>
                                        </td>
                                        <td><%= emp.position %></td>
                                        <td><%= emp.department %></td>
                                        <td>
                                            <% if (emp.status === 'Active') { %>
                                                <span class="badge bg-success status-badge">在職</span>
                                            <% } else { %>
                                                <span class="badge bg-secondary status-badge">離職</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <button class="btn btn-sm btn-outline-primary me-1"><i class="bi bi-pencil"></i></button>
                                            <button class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i></button>
                                        </td>
                                    </tr>
                                <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="5" class="text-center py-4 text-muted">目前沒有員工資料</td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="addEmployeeModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">新增員工資料</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="addEmployeeForm">
                    <div class="mb-3">
                        <label for="empName" class="form-label">姓名</label>
                        <input type="text" class="form-control" id="empName" required>
                    </div>
                    <div class="mb-3">
                        <label for="empEmail" class="form-label">Email</label>
                        <input type="email" class="form-control" id="empEmail" required>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="empPosition" class="form-label">職位</label>
                            <input type="text" class="form-control" id="empPosition" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="empDept" class="form-label">部門</label>
                            <select class="form-select" id="empDept">
                                <option value="業務部">業務部</option>
                                <option value="工程部">工程部</option>
                                <option value="人資部">人資部</option>
                                <option value="行銷部">行銷部</option>
                            </select>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">狀態</label>
                        <select class="form-select" id="empStatus">
                            <option value="Active">在職</option>
                            <option value="Inactive">離職</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">取消</button>
                <button type="button" class="btn btn-primary" onclick="submitNewEmployee()">儲存</button>
            </div>
        </div>
    </div>
</div>
</body>
</html>