<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="UTF-8">
    <title>管理後台 | 人員列表</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        .sidebar { min-height: 100vh; background-color: #2c3e50; color: white; }
        .nav-link { color: rgba(255,255,255,0.8); }
        .nav-link:hover, .nav-link.active { color: white; background-color: rgba(255,255,255,0.1); border-radius: 5px; }
        .avatar { width: 40px; height: 40px; border-radius: 50%; object-fit: cover; background: #ddd;}
        .status-badge { font-size: 0.8em; }
    </style>
</head>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
    /**
     * [修改] 主函式：處理表單送出 (包含新增與修改)
     */
    async function submitForm() {
        // [新增] 取得隱藏的 ID 欄位
        const id = document.getElementById('empId').value;
        
        const name = document.getElementById('empName').value;
        const email = document.getElementById('empEmail').value;
        const position = document.getElementById('empPosition').value;
        const department = document.getElementById('empDept').value;
        const status = document.getElementById('empStatus').value;

        if(!name || !email || !position) {
            alert("請填寫所有必填欄位");
            return;
        }

        // 包裝資料，如果有 ID 就放進去
        const employeeData = { id, name, email, position, department, status };
        
        // [新增] 判斷方法：有 ID 就是 PUT (修改)，沒有就是 POST (新增)
        const method = id ? 'PUT' : 'POST';

        try {
            const response = await fetch('/api/employees', {
                method: method,
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(employeeData)
            });

            if (response.ok) {
                // [修改] 為了簡化邏輯，成功後直接重新整理頁面顯示最新資料
                alert(id ? '修改成功！' : '新增成功！');
                window.location.reload(); 
            } else {
                alert('操作失敗，請稍後再試');
            }
        } catch (error) {
            console.error('Error:', error);
            alert('系統錯誤');
        }
    }

    // [新增] 啟動編輯模式
    function startEdit(id, name, email, position, department, status) {
        // 1. 將資料填入 Modal 欄位
        document.getElementById('empId').value = id;
        document.getElementById('empName').value = name;
        document.getElementById('empEmail').value = email;
        document.getElementById('empPosition').value = position;
        document.getElementById('empDept').value = department;
        document.getElementById('empStatus').value = status;
        
        // 2. 修改 Modal 標題
        document.querySelector('.modal-title').innerText = '修改員工資料';

        // 3. 開啟 Modal
        const modalEl = document.getElementById('addEmployeeModal');
        const modal = new bootstrap.Modal(modalEl);
        modal.show();
    }

    // [新增] 刪除員工函式
    async function deleteEmployee(id) {
        if (!confirm('確定要刪除這位員工嗎？')) return;

        try {
            const response = await fetch('/api/employees', {
                method: 'DELETE',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ id: id })
            });

            if (response.ok) {
                alert('刪除成功');
                window.location.reload(); // 刪除後重新整理
            } else {
                alert('刪除失敗');
            }
        } catch (error) {
            console.error(error);
            alert('系統錯誤');
        }
    }

    // [新增] 重置表單 (點擊新增按鈕時呼叫)
    function resetForm() {
        document.getElementById('addEmployeeForm').reset();
        document.getElementById('empId').value = ''; // 清空 ID
        document.querySelector('.modal-title').innerText = '新增員工資料';
    }
</script>

<body>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-2 sidebar p-3">
             <h4 class="text-center mb-4 mt-2">EMS 系統</h4>
             <hr>
             <ul class="nav flex-column">
                 <li class="nav-item mb-2"><a href="#" class="nav-link active"><i class="bi bi-people-fill me-2"></i> 人員管理</a></li>
                 <li class="nav-item mb-2"><a href="#" class="nav-link"><i class="bi bi-bar-chart-fill me-2"></i> 績效報表</a></li>
                 <li class="nav-item mb-2"><a href="#" class="nav-link"><i class="bi bi-gear-fill me-2"></i> 系統設定</a></li>
             </ul>
             <div class="mt-auto pt-5">
                 <a href="/login" class="btn btn-outline-light w-100 btn-sm">登出</a>
             </div>
        </div>

        <div class="col-md-10 p-4 bg-light">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>人員列表</h2>
                <div class="d-flex align-items-center">
                    <span class="me-2">歡迎回來, <strong><%= adminName %></strong></span>
                    <button class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#addEmployeeModal" onclick="resetForm()">
                        <i class="bi bi-plus-lg"></i> 新增員工
                    </button>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-body">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>姓名</th>
                                <th>職位</th>
                                <th>部門</th>
                                <th>狀態</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (employees.length > 0) { %>
                                <% employees.forEach(function(emp) { %>
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="avatar d-flex justify-content-center align-items-center me-3 text-dark">
                                                    <%= emp.name.charAt(0) %>
                                                </div>
                                                <div>
                                                    <div class="fw-bold"><%= emp.name %></div>
                                                    <div class="text-muted small"><%= emp.email %></div>
                                                </div>
                                            </div>
                                        </td>
                                        <td><%= emp.position %></td>
                                        <td><%= emp.department %></td>
                                        <td>
                                            <% if (emp.status === 'Active') { %>
                                                <span class="badge bg-success status-badge">在職</span>
                                            <% } else { %>
                                                <span class="badge bg-secondary status-badge">離職</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <button class="btn btn-sm btn-outline-primary me-1" 
                                                onclick="startEdit('<%= emp.id %>', '<%= emp.name %>', '<%= emp.email %>', '<%= emp.position %>', '<%= emp.department %>', '<%= emp.status %>')">
                                                <i class="bi bi-pencil"></i>
                                            </button>
                                            
                                            <button class="btn btn-sm btn-outline-danger" onclick="deleteEmployee('<%= emp.id %>')">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </td>
                                    </tr>
                                <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="5" class="text-center py-4 text-muted">目前沒有員工資料</td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="addEmployeeModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">新增員工資料</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="addEmployeeForm">
                    <input type="hidden" id="empId">

                    <div class="mb-3">
                        <label for="empName" class="form-label">姓名</label>
                        <input type="text" class="form-control" id="empName" required>
                    </div>
                    <div class="mb-3">
                        <label for="empEmail" class="form-label">Email</label>
                        <input type="email" class="form-control" id="empEmail" required>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="empPosition" class="form-label">職位</label>
                            <input type="text" class="form-control" id="empPosition" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="empDept" class="form-label">部門</label>
                            <select class="form-select" id="empDept">
                                <option value="業務部">業務部</option>
                                <option value="工程部">工程部</option>
                                <option value="人資部">人資部</option>
                                <option value="行銷部">行銷部</option>
                            </select>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">狀態</label>
                        <select class="form-select" id="empStatus">
                            <option value="Active">在職</option>
                            <option value="Inactive">離職</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">取消</button>
                <button type="button" class="btn btn-primary" onclick="submitForm()">儲存</button>
            </div>
        </div>
    </div>
</div>
</body>
</html>